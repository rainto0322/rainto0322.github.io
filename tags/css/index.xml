 &lt;div class="wrap" onclick="wrap(this)"&gt;&lt;/div&gt;
 &lt;div class="copy" onclick="copy(this)"&gt;&lt;/div&gt;
 &lt;/div&gt;
 &lt;pre&gt;&lt;code class="code"&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;:root {
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; --vw-screen: &lt;span style="color:#d3869b"&gt;1440&lt;/span&gt;;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;}
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;@&lt;span style="color:#fe8019"&gt;media&lt;/span&gt; &lt;span style="color:#fe8019"&gt;(&lt;/span&gt;&lt;span style="color:#fb4934"&gt;max-width&lt;/span&gt;&lt;span style="color:#fe8019"&gt;:&lt;/span&gt; &lt;span style="color:#fb4934"&gt;1023px&lt;/span&gt;&lt;span style="color:#fe8019"&gt;)&lt;/span&gt; {
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; :root {
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; --vw-screen: &lt;span style="color:#d3869b"&gt;768&lt;/span&gt;;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; }
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;}
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;@&lt;span style="color:#fe8019"&gt;media&lt;/span&gt; &lt;span style="color:#fe8019"&gt;(&lt;/span&gt;&lt;span style="color:#fb4934"&gt;max-width&lt;/span&gt;&lt;span style="color:#fe8019"&gt;:&lt;/span&gt; &lt;span style="color:#fb4934"&gt;767px&lt;/span&gt;&lt;span style="color:#fe8019"&gt;)&lt;/span&gt; {
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; :root {
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; --vw-screen: &lt;span style="color:#d3869b"&gt;375&lt;/span&gt;;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; }
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;}
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;&lt;span style="color:#fb4934"&gt;html&lt;/span&gt; {
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; &lt;span style="color:#fe8019"&gt;font-size&lt;/span&gt;: &lt;span style="color:#fabd2f"&gt;calc&lt;/span&gt;(&lt;span style="color:#d3869b"&gt;16&lt;/span&gt; &lt;span style="color:#fe8019"&gt;/&lt;/span&gt; &lt;span style="color:#fabd2f"&gt;var&lt;/span&gt;(&lt;span style="color:#fe8019"&gt;--&lt;/span&gt;vw&lt;span style="color:#fe8019"&gt;-&lt;/span&gt;&lt;span style="color:#fe8019"&gt;screen&lt;/span&gt;) &lt;span style="color:#fe8019"&gt;*&lt;/span&gt; &lt;span style="color:#d3869b"&gt;100&lt;/span&gt; &lt;span style="color:#fe8019"&gt;*&lt;/span&gt; &lt;span style="color:#d3869b"&gt;1&lt;/span&gt;&lt;span style="color:#fabd2f"&gt;vw&lt;/span&gt;);
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; &lt;span style="color:#fe8019"&gt;line-height&lt;/span&gt;: &lt;span style="color:#fabd2f"&gt;calc&lt;/span&gt;(&lt;span style="color:#d3869b"&gt;20&lt;/span&gt; &lt;span style="color:#fe8019"&gt;/&lt;/span&gt; &lt;span style="color:#fabd2f"&gt;var&lt;/span&gt;(&lt;span style="color:#fe8019"&gt;--&lt;/span&gt;vw&lt;span style="color:#fe8019"&gt;-&lt;/span&gt;&lt;span style="color:#fe8019"&gt;screen&lt;/span&gt;) &lt;span style="color:#fe8019"&gt;*&lt;/span&gt; &lt;span style="color:#d3869b"&gt;100&lt;/span&gt; &lt;span style="color:#fe8019"&gt;*&lt;/span&gt; &lt;span style="color:#d3869b"&gt;1&lt;/span&gt;&lt;span style="color:#fabd2f"&gt;vw&lt;/span&gt;);
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;}&lt;/span&gt;&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;
